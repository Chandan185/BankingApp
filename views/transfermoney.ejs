<%- include("partials/header") %>
<style>
  html,
  body {
    min-height: 100%;
  }

  body,
  div,
  form,
  input,
  select,
  p {
    padding: 0;
    margin: 0;
    outline: none;
    font-family: Roboto, Arial, sans-serif;
    font-size: 16px;
    color: #eee;
  }

  body {
    background: url("/uploads/media/default/0001/01/b5edc1bad4dc8c20291c8394527cb2c5b43ee13c.jpeg") no-repeat center;
    background-size: cover;
  }

  h1,
  h2 {
    text-transform: uppercase;
    font-weight: 400;
  }

  h2 {
    margin: 0 0 0 8px;
  }

  .Register {
    width: 50%;
    margin-left: 28%;
  }

  .left-part,
  form {
    padding: 25px;
  }

  .left-part {
    text-align: center;
  }

  .fa-graduation-cap {
    font-size: 72px;
  }

  form {
    background: rgba(0, 0, 0, 0.7);
  }

  .title {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
  }

  .info {
    display: flex;
    flex-direction: column;
  }

  input,
  select {
    padding: 5px;
    margin-bottom: 30px;
    background: transparent;
    border: none;
    border-bottom: 1px solid #eee;
  }

  input::placeholder {
    color: ##F0FFF0;
  }

  option:focus {
    border: none;
  }

  option {
    background: black;
    border: none;
  }

  .btn-item,
  button {
    padding: 10px 5px;
    margin-top: 20px;
    border-radius: 5px;
    border: none;
    background: #205375;
    text-decoration: none;
    font-size: 20px;
    font-weight: 400;
    color: #fff;
  }

  .btn-item {
    display: inline-block;
    margin: 20px 5px 0;
  }

  button {
    width: 100%;
  }

  button:hover,
  .btn-item:hover {
    background: #205375;
  }

  @media (min-width: 568px) {

    html,
    body {
      height: 100%;
    }

    .main-block {
      flex-direction: row;
      height: calc(100% - 50px);
    }

    .left-part,
    form {
      flex: 1;
      height: auto;
    }
  }
</style>
<div class="Register">
  <%if(message!=""){%>
    <%if(message=="Congratulations! Transaction Successful"){%>
      <div class="alert alert-success" role="alert">
        <%=message%>
      </div>
    <%}else{%>
      <div class="alert alert-danger" role="alert">
        <%=message%>
      </div>
    <%}%>
  <%}%>
  <form action="/sendmoney" method="POST">
    <div class="title">
      <h2>TRANSFER MONEY</h2>
    </div>
    <div class="info">
      <input class="fname" type="text" name="sendername" placeholder="Sender's name" required>
      <input type="email" name="senderemail" placeholder="Sender's Email" required>
      <input class="fname" type="text" name="receivername" placeholder="Reciever's name" required>
      <input type="email" name="receiveremail" placeholder="Receiver's Email" required>
      <input type="text" name="money" placeholder="Amount to transfer" required>
    </div>
    <button type="submit" href="/" style="background-color: #205375">Submit</button>
    </form>
</div>

<%- include("partials/footer") %>
