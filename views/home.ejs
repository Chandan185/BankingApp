<%- include("partials/header") -%>
<h1 class="frontline">Welcome to the sparks bank</h1>
<h2 style="text-align:center"> Expertise you need. Service you deserve!</h2>
<div class="container-fluid home">
  <div class="row">
    <div class="col-md-3">
      <img src="images/user.png" class="front">
      <div class="button">
        <form action="/createuser" method="post">
          <button class="btn btn-lg" type="submit" name="button" href="/createuser">Create user</button>
        </form>
      </div>
    </div>
    <div class="col-md-3">
      <img src="images/customer.jpg" class="front">
      <div class="button">
        <form  action="/viewcustomer" method="post">
          <button class="btn btn-lg" type="submit" name="button" href="/viewcustomer">view customer</button>
        </form>
      </div>
    </div>
    <div class="col-md-3">
      <img src="images/transfer.jpg" class="front">
      <div class="button">
        <form  action="/transfermoney" method="post">
          <button class="btn btn-lg" type="submit" name="button" href="/transfermoney">Transfer money</button>
        </form>
      </div>
    </div>
    <div class="col-md-3">
      <img src="images/transaction.jpg" class="front">
      <div class="button">
        <form  action="/history" method="post">
          <button class="btn btn-lg" type="submit" name="button" href="/transactionhistory">Transaction history</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
